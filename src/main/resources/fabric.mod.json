{
  "schemaVersion": 1,
  "id": "oria",
  "version": "${version}",

  "name": "Oria",
  "description": "Let's go golfing",
  "authors": [
    "cat16"
  ],
  "contact": {
    "sources": "the void"
  },

  "license": "CC0-1.0",
  "icon": "assets/oria/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "cat16.oria.Oria"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "cat16.oria.client.OriaClient"
      }
    ],
    "cardinal-components": [
      "cat16.oria.component.OriaComponents"
    ]
  },
  "mixins": [
    "oria.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.2",
    "fabric": "*",
    "minecraft": "1.19.3",
    "fabric-language-kotlin": ">=1.9.1+kotlin.1.8.10"
  },
  "suggests": {
    "flamingo": "*"
  },
  "custom": {
    "cardinal-components": [
      "oria:magic"
    ]
  }
}
