{
  "schemaVersion": 1,
  "id": "oria",
  "version": "${version}",

  "name": "Oria",
  "description": "A heavy magic mod",
  "authors": [
    "cat16"
  ],
  "contact": {
    "sources": "https://github.com/cat16/oria"
  },

  "license": "CC0-1.0",
  "icon": "assets/oria/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "cat16.oria.Oria"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "cat16.oria.client.OriaClient"
      }
    ]
  },
  "mixins": [
    "oria.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.2",
    "fabric": "*",
    "minecraft": "1.16.x",
    "fabric-language-kotlin": "*"
  },
  "suggests": {
    "flamingo": "*"
  }
}
